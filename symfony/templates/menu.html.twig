<ul class="menu-user">
	{% if app.user %}
		<li>
			<a href="{{ path('userProfile', {username: app.user.username}) }}" alt="Veure perfil de {{app.user.username}}">
				{% if app.user.imatge and app.user.imatge is not empty %}
					<img src="{{ asset("img/imatges_perfil/" ~ app.user.imatge) }}" alt="imatge de perfil" id="img-modif">
				{% else %}
					<i class="menu-icon fa fa-user-circle"></i>
				{% endif %}
			</a>
		</li>
		<li>
			<a class="menu-link menu-username" href="{{ path('userProfile', {username: app.user.username}) }}" alt="Enllaç al perfil d'usuari" title="Veure perfil d'usuari">{{app.user.username}}</a>
		</li>
		<li>

			<a class="menu-link logout-link" href="{{ path('app_logout')}}" alt="Tancar la sessió">
				sortir
			</a>
		</li>
	{% else %}
		<li>
			<a href="{{ path('app_login')}}" alt="Enllaç a formulari de login">
				<i class="menu-icon fa fa-user-circle"></i>
			</a>
		</li>
	{% endif %}
</ul>

