<ul
	id="menu-bottom">
	<!--SI HI HA UN USUARI LOGGEJAT - primer mostrar el seu perfil-->
	{% if app.user %}
		<li>
			<a
				class="menu-user" href="{{ path('userProfile', {username:app.user.username})}}">
				<!--SI L'USUARI TE IMATGE DE PERFIL-->
				{% if app.user.imatge %}
					<img src="{{ asset("/img/imatges_perfil/" ~ app.user.imatge) }}" alt="imatge de perfil" id="img-modif">
				{% else %}
					<i class="fa fa-user-circle"></i>
				{% endif %}
			</a>
		</li>
		<li>
			<a class="menu-username" href="{{ path('userProfile')}}">{{app.user.username}}</a>
		</li>
		<li>
			<a class="menu-icon-logout" href="{{ path('app_logout')}}">
				<i class="fa fa-power-off"></i>
			</a>
			<a class="menu-link-logout" href="{{ path('app_logout')}}">
				sortir
			</a>
		</li>
	{% else %}
		<li>
			<a class="menu-icon" href="{{ path('app_login')}}">
				<i class="fa fa-user-circle"></i>
			</a>
		</li>
	{% endif %}
	<!-- HAMBURGUESA TOGGLE -->

	{# <li id="hamburgesa">
		<i class="menu-icon fa fa-bars"></i>
	</li> #}

	<!--RESTA DE ITEMS DEL MENU - PAGINA INICI-->
	<li style="margin-top:2em;">
		<a class="menu-icon" href="{{ path('homepage')}}">
			<i class="fa fa-home"></i>
		</a>
		{# <a class="menu-link" href="{{ path('homepage')}}">INICI</a> #}
	</li>
	{# <li>
		<a class="menu-icon" href="{{ path('homepage')}}">
			<i class="fa fa-list"></i>
		</a>
	</li> #}

	<!-- BUSCADOR -->
	<li id="search">
		<i class="menu-icon fa fa-search"></i>
	</li>


</ul>
