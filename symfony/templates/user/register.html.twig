{% extends 'base.html.twig' %}

{% block title %}
	B-NERDS! Registre
{% endblock %}


{% block navbar %}
	{{ include('menu.html.twig') }}
{% endblock %}

{% block content %}
	<section>
		<h1 class="titulo">
			Formulari d'alta nou usuari
		</h1>

		{{ form_start(registrationForm) }}

		{# {% if form.valid == false %} #}
		<div class="form-alert-errors">
			{{ form_errors(registrationForm.nom) }}
			{{ form_errors(registrationForm.cognom) }}
			{{ form_errors(registrationForm.email) }}
			{{ form_errors(registrationForm.nom_usuari) }}
			{{ form_errors(registrationForm.plainPassword) }}
			{{ form_errors(registrationForm.agreeTerms) }}
		</div>
		{# {% endif %} #}


		<div class="form-group">
			{{ form_label(registrationForm.nom) }}
			{{ form_widget(registrationForm.nom) }}
			<p class="help-text"></p>
			<p class="form-error-text"></p>
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.cognom) }}
			{{ form_widget(registrationForm.cognom) }}
			<p class="help-text"></p>
			<p class="form-error-text"></p>
		</div>

		<div class="form-group">
			{{ form_label(registrationForm.email) }}
			{{ form_widget(registrationForm.email) }}
			{{ form_help(registrationForm.email) }}
			<p class="form-error-text"></p>
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.nom_usuari) }}
			{{ form_widget(registrationForm.nom_usuari) }}
			{{ form_help(registrationForm.nom_usuari) }}
			<p class="form-error-text"></p>
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.plainPassword) }}
			{{ form_widget(registrationForm.plainPassword) }}
			{{ form_help(registrationForm.plainPassword) }}
			<p class="form-error-text"></p>
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.pass2) }}
			{{ form_widget(registrationForm.pass2) }}
			{{ form_help(registrationForm.pass2) }}
			<p class="form-error-text"></p>
		</div>

		<div class="form-group">
			{{ form_label(registrationForm.data_naixament) }}
			{{ form_widget(registrationForm.data_naixament) }}
			{{ form_help(registrationForm.data_naixament) }}
			<p class="form-error-text"></p>
		</div>

		{{ form_widget(registrationForm.agreeTerms) }}
		<label for="{{ registrationForm.agreeTerms.vars.id }}">Accepto els
			<a target="_blank" alt="Enllaç a termes i condicions" href="https://www.rocketlawyer.com/es/es/sem/condiciones-generales-de-venta-de-bienes-o-servicios-en-internet?gclid=CjwKCAjw7-P1BRA2EiwAXoPWAzOX8S3UChlVLnffxHLx4KZ-t448B4BqRfwQuCF3WJSpFVgHr3aa-BoCNM4QAvD_BwE">termes i condicions</a>
		</label>
		<br/>

		<button class="btn btn-outline-secondary">Register</button>
		<button class="btn btn-outline-secondary" type="button" onclick="location.href='{{ path('homepage') }}'">Cancel·la</button>

		{{ form_end(registrationForm) }}
	</section>
{% endblock %}
